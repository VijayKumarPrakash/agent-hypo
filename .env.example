# White Agent - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# LLM Configuration
# ============================================================================

# Gemini API Key (for LLM-powered report generation)
# Get your key from: https://makersuite.google.com/app/apikey
# Optional - if not provided, the agent will use template-based reports
GEMINI_API_KEY=your_gemini_api_key_here

# Alternative: OpenAI API Key (if you want to use OpenAI instead)
# Note: Current implementation uses Gemini, but you can extend it
# OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# Directory Configuration
# ============================================================================

# Input directory for test data
# Default: inputs
WHITE_AGENT_INPUTS_DIR=inputs

# Output directory for analysis results
# Default: results
WHITE_AGENT_RESULTS_DIR=results

# ============================================================================
# Agent Configuration
# ============================================================================

# Statistical significance level (alpha)
# Default: 0.05
WHITE_AGENT_ALPHA=0.05

# Confidence level for confidence intervals
# Default: 0.95
WHITE_AGENT_CONFIDENCE_LEVEL=0.95

# ============================================================================
# Network Configuration (for A2A server mode)
# ============================================================================

# Host for A2A agent communication
# Default: 0.0.0.0 (all interfaces)
WHITE_AGENT_HOST=0.0.0.0

# Port for A2A agent communication
# Default: 8001
WHITE_AGENT_PORT=8001

# Host for launcher control
# Default: 0.0.0.0
WHITE_AGENT_LAUNCHER_HOST=0.0.0.0

# Port for launcher control
# Default: 8000
WHITE_AGENT_LAUNCHER_PORT=8000

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# ============================================================================
# Security & Privacy
# ============================================================================

# Set to "true" to disable external LLM calls (template reports only)
# Useful for privacy-sensitive data
# DISABLE_LLM=false

# ============================================================================
# Development & Debugging
# ============================================================================

# Enable verbose output
# DEBUG_MODE=false

# Save intermediate analysis steps
# SAVE_INTERMEDIATE_RESULTS=false

# ============================================================================
# Notes
# ============================================================================

# 1. This file should be copied to .env and never committed to git
# 2. The .env file is automatically loaded by main.py and launcher.py
# 3. Environment variables can also be set directly in your shell
# 4. Values in .env override shell environment variables
# 5. All configuration is optional - defaults will be used if not specified
